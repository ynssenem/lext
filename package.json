{
  "name": "@lextdev/root",
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "release:major": "node -r esm scripts/release/index.js major",
    "release:minor": "node -r esm scripts/release/index.js minor",
    "release:patch": "node -r esm scripts/release/index.js patch",
    "eslint:fix": "eslint --fix .",
    "build:core": "rollup -c --environment TARGET:core --bundleConfigAsCjs",
    "build:hook": "rollup -c --environment TARGET:hook --bundleConfigAsCjs",
    "build:icon": "rollup -c --environment TARGET:icon --bundleConfigAsCjs",
    "build:storage": "rollup -c --environment TARGET:storage --bundleConfigAsCjs",
    "build:all": "npm run build:core && npm run build:hook && npm run build:icons",
    "watch:core": "rollup -c --environment TARGET:core --bundleConfigAsCjs --watch",
    "watch:hook": "rollup -c --environment TARGET:hook --bundleConfigAsCjs --watch",
    "watch:icon": "rollup -c --environment TARGET:icon --bundleConfigAsCjs --watch",
    "watch:storage": "rollup -c --environment TARGET:storage --bundleConfigAsCjs --watch",
    "anatolia:dev": "lerna run ios --scope @lextdev/anatolia --stream --",
    "anatolia:fix": "lerna run fix --scope @lextdev/anatolia --stream --",
    "anatolia:add:core": "lerna add @lextdev/core --scope @lextdev/anatolia",
    "anatolia:add:hook": "lerna add @lextdev/hook --scope @lextdev/anatolia",
    "anatolia:add:icon": "lerna add @lextdev/icon --scope @lextdev/anatolia",
    "anatolia:add:storage": "lerna add @lextdev/storage --scope @lextdev/anatolia"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "esm": "^3.2.25",
    "lerna": "^8.1.2",
    "prettier": "3.2.5",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.4.2"
  }
}
